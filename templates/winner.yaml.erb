---
robot_jid: <%= robot_jid %>
to_jid: <%= to_jid %>
account_id: <%= account_id %>
content:
  header:
    text: "Lottery Shares"
  body:
    - type: "section"
      sections:
        - type: "message"
          text: "Call on <%= person.name %>"
        - type: "message"
          text: "They joined at <%= person.joined_at_time %>"
        - type: "actions"
          items:
            - text: "They started sharing"
              value: "mark-sharing:<%= account_id %>.<%= person.meeting_id %>.<%= person.id %>"
              style: 'Primary'
            - text: "Draw again"
              value: "draw-again:<%= account_id %>.<%= person.meeting_id %>"
              style: "Danger"
  footer: "Winner winner chicken dinner!"
